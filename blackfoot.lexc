LEXICON Root
0   PossessivePrefix ;
0   NounNotPossessedStem ;

LEXICON PossessivePrefix
1+:nit^      NounPossessedStem ;
1+:n^        NounPossessedStem ;
2+:kit^      NounPossessedStem ;
2+:k^        NounPossessedStem ;
21+:kit^     NounPossessedStem ;
21+:k^       NounPossessedStem ;
3+:w^        NounPossessedStem ;
3+:ot^       NounPossessedStem ;
4+:w^        NounPossessedStem ;
4+:ot^       NounPossessedStem ;

LEXICON NounPossessedStem
0   NAR ;
! 0   NAN ;
! 0   NIN ;
! 0   NIR ;

LEXICON NounNotPossessedStem
0   NAN ;
0   NIN ;

LEXICON PossessiveSuffix
