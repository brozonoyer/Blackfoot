! glosses based on Frantz 2017
! Multichar_Symbols   1+ 2+ 3+ NAN NIN +1P +21 +2P +3S +3P +4S +4P +AN.P +IN.S +IN.P +NONPARTIC

LEXICON Root
! 0   PossessivePrefix ;
0   NounNotPossessedStem ;

! LEXICON PossessivePrefix
! 1+:nit^      NounStem ;
! 1+:n^        NounStem ;
! 2+:kit^      NounStem ;
! 2+:k^        NounStem ;
! 21+:kit^     NounStem ;
! 21+:k^       NounStem ;
! 3+:ot^       NounStem ;
! 4+:ot^       NounStem ;

! LEXICON NounStem
! 0   NAN ;
! 0   NIN ;
! 0   NIR ;
! 0   NAR ;

LEXICON NounNotPossessedStem
0   NAN ;
0   NIN ;

! LEXICON PossessiveSuffix
! 0               Agr ;
! +1P:^innaan     Agr ;
! +21P:^innoon    Agr ;
! +2P:^oaawa      Agr ;
! +3P:^oaawa      Agr ;
! +4S:^wa         Agr ;
! +4P:^oaawa      Agr ;

! LEXICON Agr
! 0   NANAgr ;
! 0   NINAgr ;

LEXICON NANAgr
+3S:^wa          # ;  ! animate singular suffix (major third person), retains non-permanent consonants
+AN.P:^iksi      # ;  ! animate plural suffix, causes deletion of non-permanent consonants
+NONPARTIC:^i    # ;  ! non-particular suffix, causes deletion of non-permanent consonants
+4S:^yi          # ;  ! minor third person suffix, retains non-permanent consonants

LEXICON NINAgr
+IN.S:^yi        # ; ! inanimate singular suffix, retains non-permanent consonants
+IN.P:^istsi     # ; ! inanimate plural suffix, causes deletion of non-permanent consonants

LEXICON NAN
natáyo      NANAgr ;
naató'si    NANAgr ;
ponoká      NANAgr ;
nínaa       NANAgr ;
kakkóó      NANAgr ;
